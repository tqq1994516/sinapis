// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu
{
	"name": "Ubuntu",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"dockerFile": "Dockerfile",
	"features": {
		"ghcr.io/devcontainers/features/git:1": {},
		"ghcr.io/devcontainers/features/node:1": {},
		"ghcr.io/devcontainers/features/python:1": {},
		"ghcr.io/devcontainers/features/rust:1": {},
		"ghcr.io/devcontainers-extra/features/protoc:1": {},
		"ghcr.io/lee-orr/rusty-dev-containers/cargo-binstall:0": {},
		"ghcr.io/lee-orr/rusty-dev-containers/cargo-make:0": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"adam-bender.commit-message-editor",
				"mikestead.dotenv",
				"oderwat.indent-rainbow",
				"DavidAnson.vscode-markdownlint",
				"Gruntfuggly.todo-tree",
				"zxh404.vscode-proto3",
				"redhat.vscode-yaml",
				"redhat.vscode-xml",
				"ms-python.python",
				"njpwerner.autodocstring",
				"bradlc.vscode-tailwindcss",
				"fill-labs.dependi",
				"dustypomerleau.rust-syntax",
				"rust-lang.rust-analyzer",
				"tamasfe.even-better-toml",
				"lorenzopirro.rust-flash-snippets",
				"ZhangYue.rust-mod-generator",
				"vadimcn.vscode-lldb",
				"evgeniypeshkov.syntax-highlighter",
				"JScearcy.rust-doc-viewer",
				"PolyMeilex.rust-targets"
			]
		},
		"settings": {
			"terminal.integrated.shell.linux": "/usr/bin/zsh"
		}
	},
	"postCreateCommand": "apt install clang -y&&cargo install --locked wash-cli&&cargo install --locked --version 0.2.24 cargo-leptos&&cargo install cargo-make&&cargo install wasm-opt&&pnpm i",

	"forwardPorts": [8000]

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
